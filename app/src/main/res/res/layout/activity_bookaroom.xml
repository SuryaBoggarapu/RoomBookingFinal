<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv2"
        android:text="Add Capacity"
        android:textColor="#A76464"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_phno"
        android:background="@drawable/edittext_rounded"
        android:hint="Add Capacity"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:textColorHint="#C5BFC2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_booking_purpose"
        android:text="Booking Purpose"
        android:textColor="#A76464"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Spinner
        android:id="@+id/spinner_booking_purpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded"
        android:textColorHint="#B68E9C"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:padding="8dp"
        android:popupBackground="@android:color/white"
        android:entries="@array/Book_meet_exam"/>



    <Button
        android:id="@+id/btn_reg"
        android:text="Submit"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_rounded"
        android:layout_width="150dp"
        android:layout_height="40dp" />

</LinearLayout>